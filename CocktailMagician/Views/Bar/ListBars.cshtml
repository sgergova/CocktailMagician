@model IEnumerable<CocktailMagician.Web.Models.BarViewModel>

@{
    ViewData["Title"] = "List";
}





     


    <table id="dtBasicExample" class="table" width="100%">
        <thead>
            <tr>

                <th>
                    Image
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    Cocktails
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        <img src="@item.ImageURL" alt="Generic placeholder image" width="140" height="100">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @item.BarCocktails.Count
                    </td>
                  <td>
                      <a style="color:#b58900" asp-action="BarDetails" asp-route-id="@item.Id">Details</a>
                 </td>
                </tr>
        }
            </tbody>
        </table>
    <p>
        <a class="button"  data-toggle="modal" data-target="#modalCreateBar">Create New</a>
        <partial model="new BarViewModel()" name="_CreateBarModal"/>
    </p>

