@model CocktailMagician.Web.Models.CocktailViewModel

@{
    ViewData["Title"] = "CocktailDetails";
}

<h1>Cocktail Details</h1>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AlcoholPercentage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AlcoholPercentage)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsAlcoholic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsAlcoholic)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageURL)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImageURL)
        </dd>
    </dl>
</div>

