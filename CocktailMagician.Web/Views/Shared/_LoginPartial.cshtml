@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" style="position:relative;top: -66px;
    left:800px;" title="Manage">Hello @User.Identity.Name!</a>
  
    
        <form style=" position:relative;top:-108px; left:1000px; " class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-white">Logout</button>
        </form>
   
}
else
{
    
        <a style="color:antiquewhite; position:relative;top: -66px; left:800px;" class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
   
  
        <a style="color:antiquewhite; position:relative;top:-108px; left:870px; " class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
   
}

